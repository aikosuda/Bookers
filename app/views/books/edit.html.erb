<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>

<% if @book.errors.any? %>
  	  <div>
  	  	<h2><%= pluralize(@book.errors.count, "error") %></h2>
  		<ul>
  			<% @book.errors.full_messages.each do |message| %>
  				<li><%= message %></li><% end %>
  		</ul>
  	  </div>
	<% end %>

	<div class="field">
		<p>Title</p>
		<%= f.text_field :title %>
	</div>
	<div class="field">
		<p>Body</p>
		<%= f.text_area :body %>
	</div>
	<div class="field">
		<%= f.submit ' Update Book ' %>
	</div>
<% end %>


<%= link_to 'Show', book_path %>|<%= link_to 'Back', books_path %>

